extends ../layouts/default

block head
	- var pageTitle = '';

block header
	include ../blocks/header/header

block content
	main.main
		.container
			.main-content
				.side-bar
					a(href="index.html").logo
						img(src="images/logo.svg", alt="")
					nav.nav
						ul
							li
								a(href="#").dash.active Dashboard
							li
								a(href="#").prof Profile
							li
								a(href="#").ex Exchange
				.content
					.setting
						form(action="#").mainForm
							.mainForm__wrap
								span.setting-title Main information
								label.mainForm__label Profile name
								input(type="text" placeholder='John Doe').mainForm__input 
								button(type='submit').mainForm__btn Save Changes
					.setting
						form(action="#").mainForm
							.mainForm__wrap
								span.setting-title Google authenticator
								.mainForm__df-wrap
									input(type="checkbox" name="googledet" id="googledet").mainForm__input-check
									label(for="googledet").mainForm__label-check
									span Enable google authenticator
						.qr-wrap
							.qr-img
								img(src="images/qr-code.jpg", alt="")
							.qr-info
								p Scan this QR-code in Google Authenticator app or enter this code manualy to the app
								span C4553C4JLVHI6ZZ0
					.setting
						span.setting-title Connect other accounts
						.df-wrap
							.soc
								.soc__img
									img(src="images/discord.png", alt="")
								.soc__info
									span.soc__title Discord
									p.soc__desc Cupidatat eu duis cillum ex quis laborum proident occaecat voluptate irure velit magna adipisicing. Anim elit dolor ea amet pariatur adipisicing quis
									a(href="#").soc__link Connect
							.soc
								.soc__img
									img(src="images/telegram.png", alt="")
								.soc__info
									span.soc__title Telegram
									p.soc__desc Cupidatat eu duis cillum ex quis laborum proident occaecat voluptate irure velit magna adipisicing. Anim elit dolor ea amet pariatur adipisicing quis
									a(href="#").soc__link Connect




