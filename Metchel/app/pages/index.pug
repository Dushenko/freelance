						li.timer__item
							span.timer__date#days
							span.timer__name Дней
						li.timer__item
							span.timer__date#hours
							span.timer__name Часов
						li.timer__item
							span.timer__date#minutes
							span.timer__name Минут
						li.timer__item
							span.timer__date#seconds
							span.timer__name Секунд

